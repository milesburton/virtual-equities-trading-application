{
  "name": "Equities Market Emulator",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "deno.path": "/home/deno/.deno/bin/deno"
      },
      "extensions": [
        "denoland.vscode-deno",
        "redhat.vscode-json",
        "foxundermoon.shell-format",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "skyapps.fish-vscode",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "remoteUser": "deno",
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/deno/.ssh,type=bind,consistency=cached"
  ],
  "postStartCommand": "chmod 700 /home/deno/.ssh && chmod 600 /home/deno/.ssh/* || true"
}
